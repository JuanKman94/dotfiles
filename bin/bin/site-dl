#!/bin/bash
# Download site recursively [from the specified path]
#
# NOTE: do NOT include protocol, i.e., `https://`

URL="$1"
DOMAIN=$(sed "s|\([a-zA-Z\.]\)/.*|\1|" <<< ${URL} | sed 's|https*://||')
DESTINATION=$HOME/offline/sites

mkdir -p $DESTINATION
cd $DESTINATION

wget \
      --recursive \
      --no-clobber \
      --page-requisites \
      --html-extension \
      --convert-links \
      --restrict-file-names=unix \
      --domains ${DOMAIN} \
      --no-parent \
      ${URL}

cd $OLDPWD
